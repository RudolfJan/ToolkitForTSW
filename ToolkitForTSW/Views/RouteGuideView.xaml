<Window x:Class="ToolkitForTSW.Views.RouteGuideView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:views="clr-namespace:TreeBuilders.Library.Wpf.Views;assembly=TreeBuilders.Library.Wpf"
        Title="Route Guides"
        Style="{StaticResource AllWindows}"
        mc:Ignorable="d">

  <ScrollViewer>
    <StackPanel>
      <views:FileTreeView x:Name="FileTreeViewControl" Width="420"
                          Height="400" />
      <Border Style="{StaticResource DefaultBorder}">
        <WrapPanel HorizontalAlignment="Right">
          <Button Name="CloseForm" Style="{StaticResource OKButton}">Close</Button>
        </WrapPanel>
      </Border>
    </StackPanel>
  </ScrollViewer>
</Window>